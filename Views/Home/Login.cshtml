@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<br />
<h1 style="text-align:center;color:white">Welcome To </h1>
<h1 style="text-align:center;color:white;margin-bottom:2px">Online Marketing Task Tracker</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2 style="text-align:center;color:white">Login</h2>

        <div class="jumbotron">

            <form role="form" asp-action="Login" asp-controller="Home" method="post">
                <div class="col-md-12 form-group">
                    <label for="Email">User Email</label>
                    <input type="email" name="Email" asp-for="Email" autocomplete="off" class="form-control input-sm" placeholder="Email Address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label for="Password">Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                    <span asp-validation-for="Password" id="Password" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label>Show Password</label>
                    <input type="checkbox" onchange="document.getElementById('Password').type=this.checked? 'text': 'password'">
                </div>
                <div class="col-md-12 form-group">
                    <label for="Actor">Actor</label>
                    <select asp-for="Actor">
                        <option value="">Select One</option>
                        <option value="Admin">Admin</option>
                        <option value="Monitor">Monitor</option>
                        <option value="Editor">Editor</option>
                    </select>
                    <span asp-validation-for="Actor" class="text-danger"></span>
                </div>
                <input type="submit" value="Login" class="btn btn-info btn-block">
            </form>
        </div>
    </div>

</div>
<br />
