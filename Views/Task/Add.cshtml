            <label for="AreChecked">Are Checked</label>
            <input type="checkbox" name="AreChecked" asp-for="AreChecked" autocomplete="off" class="form-control input-sm" placeholder="AreChecked">
            <span asp-validation-for="AreChecked" class="text-danger"></span>
        </div>*@

                <input type="submit" value="Register" class="btn btn-info btn-block">
                <input name="__RequestVerificationToken" type="hidden" value="<removed for brevity>">
            </form>
        </div>
    </div>

</div>